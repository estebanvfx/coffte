---
interface Props {
    icon: string;
    title: string;
    description: string;
}

const {title, description, icon} = Astro.props;
---
<div class="w-[300px] bg-[#fffab1] shadow-xl flex flex-col items-center text-center gap-4 rounded-2xl p-6">
    <img src={icon} alt={title} class="w-24 h-24">
    <h1 class="text-gray-900 text-2xl font-bold">{title}</h1>
    <p class="text-gray-900 text-lg font-medium">{description}</p>
</div>
