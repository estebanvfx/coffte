---
import '@fontsource/satisfy';
import '@fontsource/poppins';
import CheckList from '@/components/CheckList.astro';
import { Icon } from 'astro-icon/components';
import CardFacts from '@/components/CardFacts.astro';
---
<div class="w-full h-auto grid grid-cols-2 gap-4 bg-[#fdf7ee] md:px-44 py-20 texto-general">
    <div class="w-full h-full">
        <h1 class="text-[#3d1218] cursive-font font-semibold text-3xl mb-3" >¡Acerca de Coffté!</h1>
        <h2 class="text-black text-7xl font-bold">Sabor Natural en Cada Sorbo</h2>
        <p class="text-black text-lg font-medium mt-5">Disfruta el placer de una bebida deliciosa y saludable, creada con ingredientes frescos y naturales para tu bienestar.</p>
        <ul class="text-black text-sm font-medium mt-4">
            <CheckList body="Placer y bienestar en cada sorbo."/>
            <CheckList body="Frutas frescas, hierbas y miel de panela."/>
            <CheckList body="Altos estándares en cada etapa."/>
            <CheckList body="Uso sostenible de recursos."/>
            <CheckList body="Innovadoras y deliciosas."/>
        </ul>
    </div>
    <div class="w-full h-full flex justify-center items-center">
        
        <img class="w-auto h-[55vh] rounded-xl shadow-xl" src="/img/coffte-layer.jpg" alt="Coffte">
    </div>
    <span class="flex justify-center items-center col-span-2 my-16">
        <hr class="w-[50%] border-green-900">
        <Icon name="leaf-solid" class="text-green-900 text-5xl mx-4" />
        <hr class="w-[50%] border-green-900">
    </span>
    <div class="w-full h-[500px] col-span-2 flex items-center flex-col">
        <h1 class="text-black font-bold text-5xl">Conoce <span class="cursive-font text-[#581010]">los</span> Detalles!</h1>
        <div class="grid grid-cols-3 gap-14 mt-10"    >
            <CardFacts title="Sin azúcar" description="Coffté es una bebida 100% natural, sin azúcar añadida." icon="/img/icons/Sugar-Free.png" />
            <CardFacts title="Sin Químicos" description="Coffté es una bebida organica, sin químicos ni conservantes." icon="/img/icons/100-Natural.png" />
            <CardFacts title="100% Natural" description="Coffté es una bebida natural y deliciosa, creada con ingredientes frescos y naturales para tu bienestar." icon="/img/icons/Biodegradable.png" />
        </div>
    </div>
</div>

<style>
    .cursive-font{
        font-family: 'Satisfy', cursive;
    }

    .texto-general{
        font-family: 'Poppins', sans-serif;
    }
</style>