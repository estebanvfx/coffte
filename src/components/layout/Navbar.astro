---
import { Icon } from 'astro-icon/components';
---

<header class="top-0 left-0 w-full flex justify-center z-50">
    <nav class="bg-[#302216] w-full flex justify-between md:justify-between items-center py-4 md:py-0 font-bold text-base shadow-lg px-72">
        <div>
            <a href=""><img src="/img/logo-white.png" alt="" class="md:w-20 w-10"></a>
        </div>
        <div class="hidden md:block">
            <ul>
                <li class="flex gap-6 md:gap-10 text-white">
                    <a class="text-[#fff6ea] transition-all duration-300 text-lg" href="#">Inicio</a>
                    <a class="hover:text-[#3d1218] transition-all duration-300 text-lg" href="#sobre-nosotros">Sobre nosotros</a>
                    <a class="hover:text-[#3d1218] transition-all duration-300 text-lg" href="#products">Productos</a>
                    <a class="hover:text-[#3d1218] transition-all duration-300 text-lg" href="/contact">Cont√°ctenos</a>
                </li>
            </ul>
        </div>
        
        <button id="nav_button" class="md:hidden">
            <Icon id='icon_burger' name="burger" size={32} class="block"/>
            <Icon id='icon_cross' name="cross" size={32} class="hidden"/>
        </button>
    </nav>
</header>

<script>
import { isSideMenuOpen } from '@/store/store.ts';

let isOpen = false;

const navButton = document.getElementById('nav_button');
const iconBurger = document.getElementById('icon_burger');
const iconCross = document.getElementById('icon_cross');

const toggleIcons = () => {
    iconCross.classList.toggle('hidden');
    iconCross.classList.toggle('block');
    iconBurger.classList.toggle('hidden');
    iconBurger.classList.toggle('block');
};

const handleOpenAndCloseSideMenu = () => {
    isOpen = !isOpen;
    toggleIcons();
    isSideMenuOpen.set(isOpen);
};

navButton?.addEventListener('click', handleOpenAndCloseSideMenu);
</script>