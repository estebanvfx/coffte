<div id="sideMenu" class="bg-white fixed top-0 h-screen p-6 z-10 transition-all duration-300 w-[270px] md:w-[350px] lg:w-[450px] -right-[500px] md:hidden">
    <nav class="flex flex-col gap-3 mt-24">
